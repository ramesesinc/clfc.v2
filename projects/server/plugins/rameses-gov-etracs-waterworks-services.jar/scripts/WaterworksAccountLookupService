import com.rameses.annotations.*;
import com.rameses.util.*;
import java.rmi.server.*;
import com.rameses.common.*;
import com.rameses.services.extended.*;

class WaterworksAccountLookupService extends ActiveListService{

	@ActiveDB(value='waterworks_account', em="waterworks")
	def em;

	String listMethod = 'getApplicationLookup';

	@ProxyMethod
	def getColumns(params){
		return [
			[name:'acctno', caption:'Account No.'],
			[name:'entity.name', caption:'Name'],
			[name:'serialno', caption:'Serial No.']
		];
	}

	void beforeList(params){
		params.searchtext = params.searchtext ? params.searchtext : '%';
	}
}